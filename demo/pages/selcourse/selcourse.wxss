/* pages/selcourse/selcourse.wxss */
.top{
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 4%;
    box-sizing: border-box;
}
.top text{
    font-weight: 700;
    font-size: 44rpx;
    color: #434a64;
}
.pic image{
    width: 50rpx;
    height: 50rpx;
}
.se-pic{
    margin-right: 70rpx;
}

.nav-box{
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.nav-item{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 34rpx;
    color: rgb(105, 104, 104);    
}
.active{
    color: #f15a24;
    border-bottom: 8rpx solid #f15a24;
}
swiper{
    margin: 4% 3%;

}
swiper-item image{
    width: 100%;
    height: 100%;
    border-radius: 30rpx;
}
.cen-box{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 2% 0;
}
.cen-box image{
    width: 80rpx;
    height: 50rpx;
}
.cen-box text{
    color: #969eb4;
    font-size: 34rpx;
    margin-top: 2%;
}
.course-txt{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2% 3%;
    box-sizing: border-box;
}
.course-txt text:nth-of-type(1){
    font-weight: 700;
    font-size: 50rpx;
    color: #434a64;
}
.course-txt text:nth-of-type(2){
    font-size: 30rpx;
    color: gray;
}

.con-box{
    width: 100%;
    display: flex;
    justify-content: space-around;
    padding: 6% 2%;
    box-sizing: border-box;
}
.con-box .con-item{
    width: 32%;
    background-color: #eaeaea;
    font-size: 30rpx;
    padding: 10% 4% 2% 4%;
    box-sizing: border-box;
    border-radius: 10rpx;
    text-align: center;
    position: relative;
}
.con-item .pic-img{
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top: -50rpx;
    left: 30%;
    border-radius: 50%;
  border: 1px solid #f15a24;
}
.con-item text:nth-of-type(1){
    font-size: 24rpx;
}
.con-item .free{
    width: 100%;
    height: 50rpx;
    background-color: #f15a24;
    color: white;
    text-align: center;
    line-height: 50rpx;
    border-radius: 40rpx;
    margin: 10% 0;
    font-size: 24rpx;
}
.con-item .orig{
    color: #f15a24;
    font-size: 24rpx;
}

.tui-txt{
    font-size: 50rpx;
    font-weight: 700;
    color: #434a64;
    margin: 4% 2%;
}
.tui-course{
    width: 100%;
    padding: 4%;
    box-sizing: border-box;
}
.tui-item{
    width: 100%;
    padding: 4%;
    box-sizing: border-box;
    box-shadow: 4rpx 4rpx 8rpx 4rpx #eee;
    border-radius: 6%;
    margin: 8% 0;
    position: relative;
}
.top-txt{
    position: absolute;
    top: -30rpx;
    left: 0;
    background-color: #f15a24;
    color: white;
    padding: 1% 2%;
    font-size: 24rpx;
    box-sizing: border-box;
    border-top-left-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
}
.tui-item .fir-txt{
    font-size: 36rpx;
   
}
.tui-item .sec-txt{
    margin: 10% 0;
    width: 100%;
    display: flex;
    align-items: center;
    font-size: 30rpx;
}
.sec-txt image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin: 0 2%;
}
.bot-free{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid rgba(241, 241, 241, 0.849);
    padding: 4% 0 0 0;
    box-sizing: border-box;
}
.bot-free text:nth-of-type(1){
    font-size: 32rpx;
    color: gray;
}
.bot-free text:nth-of-type(2){
    color: #409426;
    font-size: 36rpx;
}