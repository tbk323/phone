.bto {
  width: 100%;
  height: 130rpx;
  background-color: red;
  position: fixed;
  bottom: 0;
  left: 0;
}
.cen {
  padding: 10rpx;
  width: 100%;
  height: 90rpx;
  margin-top: 20rpx;
  border-bottom: 2rpx solid gray;
  border-top: 2rpx solid gray;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.cen p:first-child {
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cen .right {
  text-align: center;
  border-left: 1rpx solid #333;
  padding: 8rpx;
}
.red {
  margin: 15rpx;
  color: red;
  font-weight: 600;
}
.im {
  width: 100%;
  height: 550rpx;
}
.im img {
  width: 100%;
  height: 100%;
}